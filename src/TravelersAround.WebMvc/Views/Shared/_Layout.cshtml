<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script src="@Url.Content("~/Scripts/TravelersAround.js")" type="text/javascript"></script>
    }
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="logo">
                <a href="@Url.Action("Index", "Home")" ><img src="@Url.Content("~/Content/img/logo.png")" alt="TravelersAround LOGO" /></a>
            </div>

            <div id="login-display-container">
                @Html.Partial("_LoginControl")
                @Html.Partial("_SessionInfo")
            </div>

            <div id="menucontainer">
                
                <ul id="menu">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Find travelers around you", "Index", "Search")</li>
                        <li>@Html.ActionLink("Messages", "Index", new { controller = "Messages", folder = "Inbox" })</li>
                        <li>@Html.ActionLink("Friends", "Index", "Friends")</li>
                        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                        <li>@Html.ActionLink("Logout", "LogOff", "Account")</li>
                    }
                </ul>
            </div>
        </div>

        <div id="main">
            <div id="content-container">
                <div id="ui_message">
                    <span class="notification_message">@ViewBag.NotificationMessage</span>
                </div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            <ul>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </div>
    </div>
</body>
</html>
